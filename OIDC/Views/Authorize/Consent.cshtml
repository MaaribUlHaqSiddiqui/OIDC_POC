@model ConsentViewModel
@{
    ViewData["Title"] = "Authorization Required";
}

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="text-center mb-4">
        <img src="~/images/lockkeyz-logo.png" alt="LOCKKEYZ Logo" style="height: 80px;" />
        <h2 class="mt-3" style="font-weight: 600;">Authorization Required</h2>
    </div>

    <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-body text-center">
            <p class="mb-4">
                The application <strong>@Model.ApplicationName</strong> is requesting access to:
            </p>

            <ul class="list-group text-start mb-4">
                <li class="list-group-item">Access your basic profile information</li>
                <li class="list-group-item">Access your name and profile details</li>
                <li class="list-group-item">Access your email address</li>
            </ul>

            <form method="post" asp-action="Consent">
                <input type="hidden" asp-for="ClientId" />
                <input type="hidden" asp-for="RedirectUri" />
                <input type="hidden" asp-for="Scope" />
                <input type="hidden" asp-for="State" />
                <input type="hidden" asp-for="IsMFA" />

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" name="Accepted" value="true" class="btn btn-success px-4">Allow</button>
                    <button type="submit" name="Accepted" value="false" class="btn btn-danger px-4">Deny</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Optional: Bootstrap for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
